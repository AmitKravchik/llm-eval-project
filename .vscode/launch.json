    "version": "0.2.0",
    "configurations": [

        
        {
            "name": "Run Part 1 (module)",
            "type": "python",
            "request": "launch",
            "module": "scripts.run_part1",
            "cwd": "${workspaceFolder}",
            "args": ["--num_questions", "15", "--seed", "42"],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
                },
            "justMyCode": true,
            "console": "integratedTerminal",
            "redirectOutput": true
        },

        {
            "name": "Run Part 2 (module)",
            "type": "python",
            "request": "launch",
            "module": "scripts.run_part2",
            "cwd": "${workspaceFolder}",
            "args": ["--num_questions", "15", "--seed", "0"],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
                },
            "justMyCode": true,
            "console": "integratedTerminal",
            "redirectOutput": true
        }


    ]
}